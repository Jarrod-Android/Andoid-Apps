<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    cardView:cardCornerRadius="5dp"
    cardView:contentPadding="16dp"
    cardView:cardElevation="2dp"
    cardView:cardUseCompatPadding="true"
    cardView:cardBackgroundColor="?attr/colorButtonNormal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="0dp">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:padding="4dp"
                android:textSize="24sp"
                android:text="Bucketlist Name"
                android:layout_weight="1"
                android:maxWidth="50dp"
                android:fontFamily="serif"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dayCounter"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:textSize="25sp"
                android:textColor="@android:color/holo_green_light"
                android:gravity="right"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bucketlistDescription"
            android:textStyle="normal|italic"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageViewpager">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                cardView:srcCompat="@drawable/checkmark"
                android:id="@+id/bucketlistImage"
                android:layout_weight="1" />

            </android.support.v4.view.ViewPager>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/additem"
                android:layout_marginRight="10dp"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/addphoto"
                android:layout_marginRight="10dp"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/edit"
                android:layout_marginRight="10dp"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/delete"
                android:layout_marginRight="10dp"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Click to view more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details"
                android:gravity="center_horizontal"
                android:textStyle="normal|italic"
                android:layout_weight="0" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                cardView:srcCompat="@drawable/ic_expand_more_black_24dp"
                android:id="@+id/chevron"
                android:layout_weight="0" />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>