<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/addPhotoFragment"
    tools:context="com.liamgoodwin.beforeidie.AddPhotoFragment"
    android:background="@color/colorAccent">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:text="Bucket List Item Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bucketlistItem"
        android:textSize="22sp"
        android:textAlignment="center" />

    <TextView
        android:text="itemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addPhotoTitle"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textSize="30sp"
        android:layout_margin="0dp"
        android:background="@color/colorAccent"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Click the icon below to add a photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/icon"
        android:textSize="22sp"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="80dp"
        app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
        android:id="@+id/cameraButton"
        android:adjustViewBounds="false"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:id="@+id/galleryLayout"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"></LinearLayout>

    <Button
        android:text="Return to your bucket list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/returnButton" />

</LinearLayout>
