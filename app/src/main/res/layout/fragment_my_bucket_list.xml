<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liamgoodwin.beforeidie.MyBucketListFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:text="Current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/currentBucketlist"
            android:layout_weight="1"
            android:background="?attr/colorButtonNormal" />

        <Button
            android:text="Completed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/completedBucketlist"
            android:layout_weight="1"
            android:background="?attr/colorButtonNormal" />

    </LinearLayout>

    <ListView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bucketlistListView"
        android:background="@color/listViewBackground">

    </ListView>

</LinearLayout>
